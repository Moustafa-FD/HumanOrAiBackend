{
  "compilerOptions": {
    "noEmit": true,                          // required for allowImportingTsExtensions
    "allowImportingTsExtensions": true,      // lets you import "./file.ts" from JS/TS
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "strict": true,

    // Give JS files IntelliSense + type checking from your TS code:
    "allowJs": true,
    "checkJs": true,

    // Nice-to-haves:
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
